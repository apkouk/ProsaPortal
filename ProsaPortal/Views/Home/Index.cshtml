        <div id="mainContainer" class="mainContainer">
            <div id="experienceInfoContainer">
                <div class="experienceInfo">
                </div>
            </div>

            <div id="introContainer" class="row introImage">
                <div class="introStart" style="width: 100%;">
                    <p id="wellcome" class="wellcome">
                        @_.content.intro.wellcome
                    </p>
                    <a id="btnWellcome" class="btn btn-primary btn-xl text-uppercase js-scroll-trigger row"
                       style="font-weight: bolder; border:none; " href="#intro">
                        @_.content.intro.btnWellcome
                    </a>
                </div>

            </div>
            <div id="intro" class="row">
                <div class="col intro">
                    <h2> @_.content.intro.optionMenu</h2>
                    @foreach (var item in @_.content.intro.paragraphs)
                    {               
                        <p>@item</p>
                    }
                </div>
            </div>
            <div id="techSkillsContainer" class="row">
                <div class="col techSkills">
                    <h2> @_.content.techSkills.optionMenu</h2>
                    @foreach (var item in @_.content.techSkills.paragraphs)
                    {
                    <p>@item</p>
                    }
                    <br>
                    <h3><b> @_.content.techSkills.subTitle1</b></h3>
                    <p> @_.content.techSkills.devSkills </p>
                    <br>
                    <h3><b> @_.content.techSkills.subTitle2</b></h3>
                    <p> @_.content.techSkills.concepts </p>
                    <br>
                    <h3><b> @_.content.techSkills.subTitle1</b></h3>
                    <p> @_.content.techSkills.tools </p>
                    <br>                    
                </div>
            </div>
            <div id="personalSkillsContainer" class="row">
                <div class="col personalSkills">
                    <h2> @_.content.personalSkills.optionMenu</h2>
                    @foreach (var item in @_.content.personalSkills.paragraphs)
                    {
                    <p>@item</p>
                    }
                </div>
            </div>
            <div id="experienceContainer" class="container-fluid">
                <div class="row experience">
                </div>
            </div>
            <div id="educationContainer" class="row">
                <div class="col education">
                </div>
            </div>
            <div id="serviciesContainer" class="row">
                <div class="col services">
                    <div id="servicesList" class="container-fluid">
                        <div class="row service">
                        </div>
                    </div>
                </div>
            </div>
            <div id="miscContainer" class="row">
                <div class="col misc">
                </div>
            </div>
            <div id="contactContainer" class="row">
                <div class="col contact">
                </div>
                <div id="contactEmail" class="row">
                    <div class="col-lg-12 contactEmail">
                        <form id="contactForm" novalidate="">
                            <div class="row contactForm" style="margin: 0 auto;">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="name" style="color: white;">Name</label>
                                        <input class="form-control" name="name" id="name" type="text"
                                               placeholder="Your Name *" required=""
                                               data-validation-required-message="Please enter your name.">
                                        <p class="help-block text-danger"></p>
                                    </div>
                                    <div class="form-group">
                                        <label for="email" style="color: white;">Email</label>
                                        <input class="form-control" name="email" id="email" type="email"
                                               placeholder="Your Email *" required=""
                                               data-validation-required-message="Please enter your email address.">
                                        <p class="help-block text-danger"></p>
                                    </div>
                                    <div class="form-group">
                                        <label for="phone" style="color: white;">Phone</label>
                                        <input class="form-control" name="phone" id="phone" type="tel"
                                               placeholder="Your Phone *" required=""
                                               data-validation-required-message="Please enter your phone number.">
                                        <p class="help-block text-danger"></p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="message" style="color: white;">Message</label>
                                        <textarea class="form-control" name="message" id="message"
                                                  placeholder="Your Message *" style="height:183px" required=""
                                                  data-validation-required-message="Please enter a message."
                                                  aria-invalid="false"></textarea>
                                        <p class="help-block text-danger"></p>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="col-lg-12 text-center">
                                    <div id="success"></div>
                                    <button id="sendMessageButton" class="btn btn-primary btn-xl text-uppercase"
                                            value="Send" type="submit">
                                        Send Message
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
